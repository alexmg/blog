  },
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p start check:wait",
    "check": "astro check",
    "check:wait": "wait-on tcp:3000 && astro check --wait",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check . --plugin=prettier-plugin-astro",
