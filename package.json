{
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p start check:wait",
    "check": "astro check",
    "check:wait": "wait-on tcp:3000 && astro check --wait",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check . --plugin=prettier-plugin-astro",
    "format": "prettier --write . --plugin=prettier-plugin-astro",
    "cz": "cz",
    "prepare": "husky install",
    "lint": "eslint ."
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/rss": "^4.0.7",
    "@iconify-json/devicon": "^1.1.48",
    "@iconify-json/logos": "^1.1.43",
    "@iconify-json/mdi": "^1.1.67",
    "@iconify-json/simple-icons": "^1.1.109",
    "@iconify-json/tabler": "^1.1.118",
    "astro": "^4.12.2",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^8.0.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@astrojs/react": "^3.6.0",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@divriots/jampack": "^0.15.0",
    "@fontsource/inconsolata": "^5.0.18",
    "@fontsource/nunito": "^5.0.18",
