{
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p start check:wait",
    "check": "astro check",
    "check:wait": "wait-on tcp:3000 && astro check --wait",
    "start": "astro dev",
    "build": "astro build && jampack ./dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --plugin-search-dir=. --check .",
    "format": "prettier --plugin-search-dir=. --write .",
    "cz": "cz",
    "prepare": "husky install",
    "lint": "eslint ."
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/rss": "^4.0.1",
    "astro": "^4.0.3",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^8.0.1",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@astrojs/react": "^3.0.7",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.0.3",
    "@divriots/jampack": "^0.15.0",
    "@fontsource/inconsolata": "^5.0.16",
    "@fontsource/nunito": "^5.0.16",
    "@iconify/json": "^2.2.153",
    "@resvg/resvg-js": "^2.6.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/github-slugger": "^1.3.0",
    "@types/react": "^18.2.42",
    "@typescript-eslint/parser": "^6.13.2",
    "astro-eslint-parser": "^0.15.0",
    "astro-icon": "^1.0.0-next.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-plugin-astro": "^0.29.1",
    "html-entities": "^2.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "satori": "^0.10.11",
    "satori-html": "^0.3.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --plugin-search-dir=. --write"
    ],
    "*.astro": "astro check"
  }
}
