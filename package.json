    "astro-icon": "^1.1.5",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "globals": "^16.5.0",
    "html-entities": "^2.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
