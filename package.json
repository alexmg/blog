{
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p start check:wait",
    "check": "astro check",
    "check:wait": "wait-on tcp:3000 && astro check --wait",
    "start": "astro dev",
    "build": "astro build && jampack ./dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --plugin-search-dir=. --check .",
    "format": "prettier --plugin-search-dir=. --write .",
    "cz": "cz",
    "prepare": "husky install",
    "lint": "eslint ."
  },
  "dependencies": {
    "@astrojs/rss": "^2.4.4",
    "astro": "^2.10.9",
    "fuse.js": "^6.6.2",
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^3.2.0",
    "reading-time": "^1.5.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^8.0.1",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@astrojs/react": "^2.2.2",
    "@astrojs/sitemap": "^2.0.2",
    "@astrojs/tailwind": "^4.0.0",
    "@divriots/jampack": "^0.13.0",
    "@fontsource/inconsolata": "^4.5.10",
    "@fontsource/nunito": "^4.5.12",
    "@resvg/resvg-js": "^2.4.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/github-slugger": "^1.3.0",
    "@types/react": "^18.2.20",
    "@typescript-eslint/parser": "^6.4.0",
    "astro-eslint-parser": "^0.13.3",
    "astro-iconify": "^1.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-plugin-astro": "^0.26.2",
    "html-entities": "^2.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "satori": "^0.4.14",
    "satori-html": "^0.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json}": [
      "prettier --plugin-search-dir=. --write"
    ],
    "*.astro": "astro check"
  }
}
