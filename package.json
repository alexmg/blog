    "satori": "^0.10.14",
    "satori-html": "^0.3.2",
    "typescript-eslint": "^8.48.1",
    "wait-on": "^9.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json,astro}": [
      "prettier --write --plugin=prettier-plugin-astro"
    ],
    "*.astro": "astro check"
  }
