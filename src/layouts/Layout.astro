---
import "../styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/consts";
import Seo from "@/components/Seo.astro";
import Fonts from "@/components/Fonts.astro";

interface Props {
  title?: string;
  id?: string;
  description?: string;
}

const { title = SITE.title, description = SITE.description, id } = Astro.props;
const path = Astro.url.pathname;
const pageTitle = path === "/" ? title : `${title} | ${SITE.title}`;
---

<!doctype html>
<html lang="en" class="font-display-swap h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>

    <Seo {...{ title, description, id }} />

    <Fonts />

    <!-- Prevent flash by applying theme immediately -->
    <script is:inline>
      // Apply theme as early as possible to prevent flash
      const savedTheme = localStorage.getItem("theme");
      if (
        savedTheme === "dark" ||
        (!savedTheme &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
  </head>
  <body
    class="flex min-h-full flex-col bg-slate-50 transition-colors duration-200 dark:bg-gray-900"
  >
    <Header />

    <main class="flex-grow">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Content goes here -->
        <slot />
      </div>
    </main>

    <Footer />

    <script src="@/assets/theme-switcher.js"></script>
  </body>
</html>
